<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_variables_poliza"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="20dp"
    android:layout_margin="15dp"
    card_view:contentPadding="11dp"
    card_view:cardCornerRadius="11dp">

    <LinearLayout
        android:id="@+id/layout_cardview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_variables"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/nombre_variable"
            android:textStyle="italic"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/nombre_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18sp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/poliza"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18sp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btn_buscar_poliza"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buscar_poliza"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/img_dislike"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons_dislike"/>

            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/tv_dislike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#790000"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons_like"/>

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="#005100"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />

            <ImageButton
                android:id="@+id/img_comentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:visibility="visible"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>