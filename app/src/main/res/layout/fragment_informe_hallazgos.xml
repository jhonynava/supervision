<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informe_hallazgos">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Rubro"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/edt_rubro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:hint="Selecciona"
                android:clickable="true"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:gravity="start|top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Variable"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/edt_variable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:hint="Selecciona"
                android:clickable="true"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:gravity="start|top"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Hallazgo"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/edt_hallazgo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresa el hallazgo"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:lines="4"
                android:textSize="18sp"
                android:imeOptions="actionNext"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Compromiso de Mejora"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/edt_compromisoMejora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresa el compromiso de mejora"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:lines="4"
                android:textSize="18sp"
                android:imeOptions="actionNext"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="start|top"
                android:text="Fecha para verificar cumplimiento"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/edt_fecha_cumplimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:gravity="start|top"
                android:inputType="date" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Responsable"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/edt_responsable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:enabled="false"
                android:gravity="start|top"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encargado de Seguimiento"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/edt_supervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:enabled="false"
                android:gravity="start|top"
                android:textSize="18sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_guardar_hallazgos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guardar" />

                <Button
                    android:id="@+id/btn_sinHallazgos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sin hallazgos"
                    android:layout_weight="1"/>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</FrameLayout>